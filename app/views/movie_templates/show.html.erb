<%params%>
<%if params.fetch("path_id", "") != "delete"%>
  <h1>Movie #<%=@the_movie.id%> details</h1>
<%end%>

<h1>
  Movie #<%= @the_movie.id %> details
</h1>

<a href="/movies">Go back</a><br>
<a href="/delete_movie/<%=@the_movie.id%>">Delete movie</a>

<hr>

<%if params.fetch("path_id", "") != "delete"%>
  <form action="/movies/update" method="post">
    <div>
      <input type="hidden" name="path_id" value="<%=@the_movie.id%>">
      <label for="title_box">Title</label>
      <input type="text" id="title_box" name="query_title" value ="<%=@the_movie.title%>">
    </div>

    <div>
      <label for="year_box">Year</label>
      <input type="text" id="year_box" name="query_year" value ="<%=@the_movie.year%>">
    </div>

    <div>
      <label for="duration_box">Duration</label>
      <input type="text" id="duration_box" name="query_duration" value ="<%=@the_movie.duration%>">
    </div>

    <div>
      <label for="description_box">Description</label>
      <textarea id="description_box" name="query_description" rows="3"><%=@the_movie.title%></textarea>
    </div>

    <div>
      <label for="image_box">Image</label>
      <input type="text" id="image_box" name="query_description" value ="<%=@the_movie.image%>">
    </div>

    <div>
      <label for="director_id_box">Director ID</label>
      <input type="integer" id="director_id_box" name="query_director_id" value ="<%=@the_movie.director_id%>">
    </div>

    <button>Update movie</button>
  </form>

<%end%>

<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @the_movie.title %>
  </dd>

  <dt>
    Year
  </dt>
  <dd>
    <%= @the_movie.year %>
  </dd>

  <dt>
    Duration
  </dt>
  <dd>
    <%= @the_movie.duration %>
  </dd>

  <dt>
    Description
  </dt>
  <dd>
    <%= @the_movie.description %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_movie.image %>" style="width:250px;">
  </dd>

  <dt>
    Director
  </dt>
  <dd>
    <% dir_id = @the_movie.director_id %>
    
    <% matching_directors = Director.all.where({ :id => dir_id }) %>
    
    <% the_director = matching_directors.at(0) %>

    <%= the_director.name %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_movie.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_movie.updated_at %>
  </dd>
</dl>

<hr>
